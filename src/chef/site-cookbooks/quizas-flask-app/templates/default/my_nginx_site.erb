# See
# http://wiki.nginx.org/ServerBlockExample

server {
  listen 80;

  server_name <%= @server_name %>;


  location /api/ {
    proxy_pass <%= @proxy_pass %>;

    # For OAuth stuff in reverse proxy
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  # Assumes that WebSocket server is on LocalHost.
  # If load-balancing with external servers,
  # need to add hop-by-hop header Upgrades for WebSockets
  location /socket.io {
    # e.g. http://localhost:5000/socket.io
    proxy_pass <%= @proxy_pass %>socket.io;

    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  location / {
    root <%= @static_root %>;

    # Let the user go to /study to access /study.html
    # (And still let them access other files)
    try_files $uri $uri.html $uri/index.html;
  }
}
